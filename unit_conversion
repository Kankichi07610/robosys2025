import sys
import re

error_c = 0

def unit_main(text):
    global error_c
    error_c = 0

    def inch_cm(match):
        global error_c
        error_c += 1
        val = float(match.group(1))
        return f"{match.group(0)} {val * 2.54:.1f}cm"

    def feet_cm(match):
        global error_c
        error_c += 1
        val = float(match.group(1))
        return f"{match.group(0)} {val * 30.48:.1f}cm"

    def lb_kg(match):
        global error_c
        error_c += 1
        val = float(match.group(1))
        return f"{match.group(0)} {val * 0.453:.2f}kg"

    def f_c(match):
        global error_c
        error_c += 1
        val = float(match.group(1))
        val_2 = (val - 32) * 5 / 9
        return f"{match.group(0)} {val_2:.1f}C"
    
    text = re.sub(r'(\d+(?:\.\d+)?)\s*inch\b', inch_cm, text)
    text = re.sub(r'(\d+(?:\.\d+)?)\s*feet\b', feet_cm, text)
    text = re.sub(r'(\d+(?:\.\d+)?)\s*lb\b', lb_kg, text)
    text = re.sub(r'(\d+(?:\.\d+)?)\s*F\b', f_c, text)

    return text

def main():
    try:
        text_2 = sys.stdin.read()
    except Exception:
        sys.exit(1)

    if not text_2:
        sys.exit(1)

    c_text = unit_main(text_2)
    
    if error_c == 0:
        sys.exit(1)
    
    print(c_text, end='')

if __name__ == "__main__":
    main()
